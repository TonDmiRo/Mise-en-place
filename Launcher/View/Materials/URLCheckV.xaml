<Window x:Class="Launcher.View.URLCheckV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Launcher.View"
        mc:Ignorable="d"
         Title="URL Check"
        Width="546" Height="70"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
            <GradientStop Color="#FFCDF2FD" Offset="0"/>
            <GradientStop Color="#FF31464B" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Grid>
            <StackPanel
                Margin="20,0,10,0"
                Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left">
                <TextBox 
                    Width="400"
                    Text="{Binding URL, UpdateSourceTrigger = PropertyChanged}"
                    />


                <Button  Margin="20,0,0,0"
                    Width="100"
                    Content="Выбрать"
                    Command="{Binding SetURL}"     
                    />

            </StackPanel>
        </Grid>

    </Grid>
</Window>
