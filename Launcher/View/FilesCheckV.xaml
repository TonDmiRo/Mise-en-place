                <DataGridTextColumn  
                        IsReadOnly="True"
                        Binding="{Binding FileStatus}"
                        Width="80"/>
                <DataGridTemplateColumn 
                        x:Name="deleteTask_column"
                        Width="32"
                        Visibility="Hidden">
                    <DataGridTemplateColumn.CellTemplate >
                        <DataTemplate>
                            <Button 
                                    Command="Delete" 
                                    Width="16" Height="16" 
                                    BorderBrush="{x:Null}" 
                                    Foreground="{x:Null}" 
                                    Background="Transparent" >
                                <Image 
                                        Source="/Launcher;component/Images/delete.png"
                                        Stretch="Fill"/>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        -->
        
        


    </Grid>
</Window>
