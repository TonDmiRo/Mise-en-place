<Window x:Class="Launcher.MainV"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:debug="debug-mode"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Launcher.ViewModel"
        xmlns:local="clr-namespace:Launcher"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="768"
        Height="640"
        WindowStartupLocation="CenterScreen"
        MinWidth="768"
        MinHeight="640"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize">

  <!--
  <Window.DataContext>
    <viewmodel:MainVM />
  </Window.DataContext>
-->

  <Window.Resources>
    <local:TimeSpanToTimeConverter x:Key="myTimeConverter" />

    <!--#region baseStyle-->
    <Style TargetType="{x:Type Control}"
           x:Key="baseStyle">
      <Setter Property="FontSize"
              Value="14" />
    </Style>

    <Style TargetType="{x:Type Button}"
           BasedOn="{StaticResource baseStyle}" />
    <Style TargetType="{x:Type Label}"
           BasedOn="{StaticResource baseStyle}" />
    <Style TargetType="{x:Type TextBox}"
           BasedOn="{StaticResource baseStyle}" />
    <Style TargetType="{x:Type ListView}"
           BasedOn="{StaticResource baseStyle}" />
    <!--#endregion-->


    <Style x:Key="AddButtonStyle"
           TargetType="Button"
           BasedOn="{StaticResource baseStyle}">

      <Setter Property="Content"
              Value="+" />
      <Setter Property="Width"
              Value="30" />
      <Setter Property="HorizontalAlignment"
              Value="Center" />
      <Setter Property="VerticalAlignment"
              Value="Bottom" />
    </Style>

  </Window.Resources>

  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="180" />
      <ColumnDefinition Width="300*" />
    </Grid.ColumnDefinitions>

    <Border>
      <Border.BorderBrush>Gray
      </Border.BorderBrush>
      <Border.BorderThickness>1
      </Border.BorderThickness>

      <Grid>
        <Grid.Column>0
        </Grid.Column>
        <Grid.Margin>0,0,2,0
        </Grid.Margin>
        <Grid.RowDefinitions>
          <RowDefinition Height="*" />
          <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <Grid.Style>

          <Style TargetType="Grid">
            <Style.Triggers>
              <DataTrigger Binding="{Binding ProjectIsCurrentlyChanging}"
                           Value="False">
                <Setter Property="IsEnabled"
                        Value="True">
                </Setter>
              </DataTrigger>
              <DataTrigger Binding="{Binding ProjectIsCurrentlyChanging}"
                           Value="True">
                <Setter Property="IsEnabled"
                        Value="False" />
              </DataTrigger>
            </Style.Triggers>
          </Style>

        </Grid.Style>

        <StackPanel Grid.Row="0">
          <Expander IsExpanded="True">
            <Expander.Header>
              <TextBlock Text="{Binding ProjectsCount, StringFormat=Projects ({0})}"
                         FontSize="14"
                         FontWeight="Bold" />
            </Expander.Header>
            <Expander.Content>
              <StackPanel>
                <!--Убрал из listbox: IsSynchronizedWithCurrentItem="True"-->
                <ListBox Height="220"
                         Name="ListProjects"
                         ItemsSource="{Binding Projects,UpdateSourceTrigger=PropertyChanged}"
                         SelectedItem="{Binding SelectedProject,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <TextBlock FontSize="14"
                                 Text="{Binding Path=Name}" />
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>
                <Button x:Name="AddProject"
                        Style="{StaticResource AddButtonStyle}"
                        Command="{Binding AddProjectCommand}" />
              </StackPanel >
            </Expander.Content>
          </Expander>
          <Expander IsExpanded="True"
                    Margin="0,10,0,0">
            <Expander.Header>
              <TextBlock Text="{Binding UsefulMaterialsCount, StringFormat=UsefulMaterial ({0})}"
                         FontSize="14"
                         FontWeight="Bold" />
            </Expander.Header>
            <Expander.Content>
              <StackPanel>
                <ListBox x:Name="UsefulMaterials_list"
                         Height="180"
                         ItemsSource="{Binding UsefulMaterialValues}"
                         BorderThickness="0"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                         ScrollViewer.VerticalScrollBarVisibility="Disabled">
                  <ListBox.ItemTemplate>
                    <DataTemplate>
                      <StackPanel x:Name="BackgroundStackPanel"
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top">
                        <StackPanel VerticalAlignment="Top"
                                    HorizontalAlignment="Left"
                                    Margin="0,5,5,0">
                          <CheckBox IsChecked="{Binding OpensAtLaunch, UpdateSourceTrigger=PropertyChanged}" />
                          <Button Width="16"
                                  Height="16"
                                  Margin="0,0,0,0"
                                  HorizontalAlignment="Left"
                                  BorderBrush="{x:Null}"
                                  Foreground="{x:Null}"
                                  Background="{x:Null}"
                                  Command="{Binding ElementName=UsefulMaterials_list,
                                                        Path=DataContext.StartUsefulMCommand}"
                                  CommandParameter="{Binding }">
                            <Image Source="/Launcher;component/View/Images/play.png"
                                   Stretch="Fill" />
                          </Button>
                        </StackPanel>
                        <TextBlock Width="125"
                                   FontSize="14"
                                   TextWrapping="Wrap"
                                   HorizontalAlignment="Left"
                                   Text="{Binding MaterialTitle}"
                                   VerticalAlignment="Top" />
                        <Button Width="16"
                                Height="16"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Right"
                                BorderBrush="{x:Null}"
                                Foreground="{x:Null}"
                                Background="{x:Null}"
                                Command="{Binding ElementName=UsefulMaterials_list,
                                                    Path=DataContext.RemoveUsefulMCommand}"
                                CommandParameter="{Binding }"
                                VerticalAlignment="Top">
                          <Image Source="/Launcher;component/View/Images/delete.png"
                                 Stretch="Fill" />
                        </Button>
                      </StackPanel>
                      <DataTemplate.Triggers>
                        <DataTrigger Binding="{Binding Exists}"
                                     Value="True">
                          <Setter TargetName="BackgroundStackPanel"
                                  Property="Background"
                                  Value="{x:Null}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Exists}"
                                     Value="False">
                          <Setter TargetName="BackgroundStackPanel"
                                  Property="Background"
                                  Value="#FFF58787" />
                        </DataTrigger>
                      </DataTemplate.Triggers>
                    </DataTemplate>
                  </ListBox.ItemTemplate>
                </ListBox>

                <StackPanel VerticalAlignment="Bottom"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center">
                  <Button x:Name="StartUsefulMaterials"
                          HorizontalAlignment="Left"
                          Width="60"
                          Height="23"
                          Margin="0,0,5,0"
                          FontSize="14"
                          Command="{Binding LaunchUMaterialsCommand}"
                          VerticalAlignment="Bottom">
                    <StackPanel Orientation="Horizontal"
                                Margin="0,0,0,0">
                      <Image Source="/Launcher;component/View/Images/play.png"
                             Stretch="Fill" />
                      <TextBlock Text="Start" />
                    </StackPanel>
                  </Button>
                  <Button x:Name="AddUsefulMaterial"
                          Style="{StaticResource AddButtonStyle}"
                          Command="{Binding AddUsefulMCommand}" />
                </StackPanel>

              </StackPanel>
            </Expander.Content>
          </Expander>

        </StackPanel>



        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    FlowDirection="LeftToRight"
                    HorizontalAlignment="Left">
          <Button x:Name="button1"
                  Content="1"
                  Width="30"
                  Command="{Binding SaveUser}" />
          <Button x:Name="button2"
                  Content="2"
                  Width="30" />
          <Button x:Name="button3"
                  Content="3"
                  Width="30" />
          <Button x:Name="button4"
                  Content="4"
                  Width="30" />
          <Button x:Name="button5"
                  Content="5"
                  Width="30" />
          <Button x:Name="button6"
                  Content="6"
                  Width="30" />
        </StackPanel>

      </Grid>
    </Border>

    <Grid Grid.Column="1"
          Margin="2">

      <Grid.RowDefinitions>
        <RowDefinition Height="*" />
        <RowDefinition Height="30" />
      </Grid.RowDefinitions>

      <Frame Grid.Row="0"
             x:Name="frame"
             Content="{Binding CurrentPage, Mode=TwoWay}"
             NavigationUIVisibility="Hidden" />

      <StackPanel Grid.Row="1"
                  Orientation="Horizontal"
                  FlowDirection="RightToLeft"
                  HorizontalAlignment="Right">
        <Label x:Name="nameLb1"
               Content="{Binding UsageTimeTotal, Converter={StaticResource myTimeConverter}}"
               ContentStringFormat="User in program {0}"
               FontSize="14"
               Height="30" />
      </StackPanel>

    </Grid>

  </Grid>

</Window>
